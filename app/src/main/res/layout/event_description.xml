<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_eventDescriptionImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_rounded_share"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_eventDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_eventDescriptionImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000000"
        android:layout_marginTop="-16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lb_eventDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="TÃ­tulo" />

        <ImageView
            android:id="@+id/iv_eventDescriptionCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/lb_eventDescriptionTitle"
            app:layout_constraintTop_toBottomOf="@id/lb_eventDescriptionTitle"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lb_eventDescriptionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_eventDescriptionCalendar"
            app:layout_constraintTop_toTopOf="@id/iv_eventDescriptionCalendar"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            tools:text="Data"/>

            <ImageView
                android:id="@+id/iv_eventDescriptionLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_check_24"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/lb_eventDescriptionTitle"
                app:layout_constraintTop_toBottomOf="@id/lb_eventDescriptionDate"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lb_eventDescriptionLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/iv_eventDescriptionLocal"
                app:layout_constraintTop_toTopOf="@id/iv_eventDescriptionLocal"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                tools:text="Local"/>

            <ImageView
                android:id="@+id/iv_eventDescriptionPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_check_24"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/lb_eventDescriptionTitle"
                app:layout_constraintTop_toBottomOf="@id/lb_eventDescriptionLocal"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/lb_eventDescriptionPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_eventDescriptionPrice"
                    app:layout_constraintTop_toTopOf="@id/iv_eventDescriptionPrice"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    tools:text="Price"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lb_eventDescriptionAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/lb_eventDescriptionTitle"
                app:layout_constraintTop_toBottomOf="@id/iv_eventDescriptionPrice"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="About"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lb_eventDescriptionAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/lb_eventDescriptionTitle"
                app:layout_constraintTop_toBottomOf="@id/lb_eventDescriptionAboutTitle"
                android:layout_marginTop="2dp"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas sit amet eros ullamcorper, porta odio sed, interdum urna. Nullam commodo mattis metus, at congue sem efficitur nec. Donec dignissim risus a nunc rhoncus rutrum. Maecenas iaculis et nisi ut fermentum. In hac habitasse platea dictumst. In luctus pellentesque aliquam. Suspendisse libero quam, rutrum ut nibh vel, pellentesque efficitur leo. Praesent tristique tortor leo, et lobortis velit molestie ut. Integer ultrices dignissim ipsum, id interdum nisi mattis ultrices."/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/iv_eventDescriptionCalendar"
                app:layout_constraintTop_toBottomOf="@id/lb_eventDescriptionAbout"
                android:text="Comprar Ticket"
                android:backgroundTint="@color/primary"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>